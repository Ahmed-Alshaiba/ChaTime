<div class="d-flex flex-column flex-shrink-0 p-3 bg-dark mb-0" id="body-height">
  <ul class="nav nav-pills flex-column mb-auto">
    <li>
      <!-- Rooms offcanvas bar start -->
      <div class="nav-link text-white fs-6 col" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
      Rooms
      </div>
      <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasExampleLabel">Rooms</h5>
          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <% @rooms.each do |room| %>
            <%= link_to room, class: "btn btn-outline-dark mt-3 ml-3" do%>
              <%= room.name %>
            <% end %>
          <% end %>
          <hr>
          <div class="mt-3">
            <%= render 'form', room: Room.new %>
          </div>
        </div>
      </div>
      <!-- Rooms offcanvas bar end -->
    </li>
    <hr style="color: white;">
    <li> <div class="text-white fs-8"> Users: </div> </li>
  </ul>
</div>